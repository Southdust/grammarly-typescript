{
    "name": "@grammarlyjs/grammarly.js",
    "version": "0.0.0",
    "description": "A simple JavaScript-based library for interacting with Grammarly.",
    "license": "MIT",
    "private": true,
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "prepare": "is-ci || husky install",
        "build": "turbo run build",
        "clean": "find . -name node_modules -o -name dist -o -name .expo -type d -prune | xargs rm -rf",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "test": "turbo run test --parallel",
        "lint": "prettier --check \"**/*.{ts,tsx,md}\""
    },
    "contributors": [
        "Pedro Henrique <me@syntax.lol>"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Southdust/grammarly.js.git"
    },
    "bugs": {
        "url": "https://github.com/Southdust/grammarly.js/issues"
    },
    "homepage": "https://github.com/Southdust/grammarly.js#readme",
    "keywords": [
        "grammarly",
        "api",
        "node",
        "client"
    ],
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-angular": "^17.1.0",
        "husky": "^8.0.1",
        "is-ci": "^3.0.1",
        "prettier": "^2.7.1",
        "turbo": "^1.4.6",
        "typescript": "^4.8.3"
    }
}
